! Font things
#define font_pixelsize 14
*font:        xft:ubuntu mono:pixelsize=font_pixelsize:style=regular,\
              xft:Symbola:pixelsize=10
*boldFont:    xft:ubuntu mono:pixelsize=font_pixelsize:style=bold

! URxvt things
URxvt.scrollBar: false
URxvt.letterSpace: -1
URxvt.urgentOnBell: true

URxvt.perl-ext-common: default,matcher,font-size,osc-xterm-clipboard
URxvt.url-launcher: sensible-browser
URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list
URxvt.matcher.pattern.1: \\b(b|go)/[\\w\\-\\@;\\/?:&=%\\$.+!*\\x27,~#]+

! Emacs things
emacs.font: Ubuntu Mono:pixelsize=font_pixelsize
emacs.menuBar: off
emacs.toolBar: off
emacs.verticalScrollBars: off

! cursor
Xcursor.size: font_pixelsize

! Solarized color scheme for the X Window System
